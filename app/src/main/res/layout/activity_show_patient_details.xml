<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbarStyle="insideOverlay">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/UTEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/dividerHorizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Patient"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/UTEXT"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UTEXT"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user"
            android:fontFamily="sans-serif"
            android:paddingLeft="40dp"
            android:paddingTop="8dp"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pname"
            android:layout_toRightOf="@id/user"
            android:fontFamily="sans-serif"
            android:paddingLeft="40dp"
            android:paddingTop="4dp"
            android:text="Age"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView

            android:id="@+id/cage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/page"
            android:paddingLeft="92dp"
            android:text="Age"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/pGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cage"
            android:fontFamily="sans-serif"
            android:paddingLeft="92dp"
            android:paddingTop="4dp"
            android:text="Gender"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView

            android:id="@+id/cgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pGender"
            android:paddingLeft="92dp"
            android:text="Gender"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:paddingLeft="16dp"
            android:paddingTop="70dp"
            android:src="@drawable/ic_email_black_24dp" />

        <TextView
            android:id="@+id/pAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cgender"
            android:layout_toRightOf="@id/email"
            android:fontFamily="sans-serif"
            android:paddingLeft="40dp"
            android:paddingTop="8dp"
            android:text="Address"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pAddress"
            android:layout_toRightOf="@id/email"
            android:fontFamily="sans-serif"
            android:paddingLeft="40dp"
            android:paddingTop="4dp"
            android:text="City"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:paddingLeft="16dp"
            android:paddingTop="25dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_call_black_24dp" />

        <TextView
            android:id="@+id/pcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pCity"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/call"
            android:fontFamily="sans-serif"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:text="Contact"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/History"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/call"
            android:background="?attr/dividerHorizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Patient History"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cblood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/History"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Blood Group:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pBlood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/History"
            android:layout_toRightOf="@id/cblood"
            android:fontFamily="sans-serif"
            android:paddingLeft="48dp"
            android:paddingTop="8dp"
            android:text="Blood"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cblood"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Weight (KG):"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pBlood"
            android:layout_toRightOf="@id/cweight"
            android:fontFamily="sans-serif"
            android:paddingLeft="52dp"
            android:paddingTop="8dp"
            android:text="Weight"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cweight"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="HyperTension:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/pht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pweight"
            android:layout_toRightOf="@id/textView4"
            android:fontFamily="sans-serif"
            android:paddingLeft="38dp"
            android:paddingTop="8dp"
            android:text="hypertension"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Smoker:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/psmoking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pht"
            android:layout_toRightOf="@id/textView6"
            android:fontFamily="sans-serif"
            android:paddingLeft="82dp"
            android:paddingTop="8dp"

            android:text="Smoker"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Heart Problem:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/php"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/psmoking"
            android:layout_toRightOf="@id/textView7"
            android:fontFamily="sans-serif"
            android:paddingLeft="34dp"
            android:paddingTop="8dp"
            android:text="Heart Problem"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Diabetic :"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pdia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/php"
            android:layout_toRightOf="@id/textView8"
            android:fontFamily="sans-serif"
            android:paddingLeft="76dp"
            android:paddingTop="8dp"
            android:text="Diabetic"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Chest Pain:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/pcp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pdia"
            android:layout_toRightOf="@id/textView21"
            android:fontFamily="sans-serif"
            android:paddingLeft="60dp"
            android:paddingTop="8dp"
            android:text="Chest Pain"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView21"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Nausea:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pNau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pcp"
            android:layout_toRightOf="@id/textView22"
            android:fontFamily="sans-serif"
            android:paddingLeft="82dp"
            android:paddingTop="8dp"
            android:text="Nausea"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView22"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Neckpain:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pNp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pNau"
            android:layout_toRightOf="@id/textView23"
            android:fontFamily="sans-serif"
            android:paddingLeft="70dp"
            android:paddingTop="8dp"
            android:text="Neck Pain"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView23"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Sweating:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/pS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView23"
            android:layout_toRightOf="@id/textView24"
            android:fontFamily="sans-serif"
            android:paddingLeft="70dp"
            android:paddingTop="8dp"
            android:text="Sweating"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView24"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Short of Breath:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/psob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pS"
            android:layout_toRightOf="@id/textView25"
            android:fontFamily="sans-serif"
            android:paddingLeft="28dp"
            android:paddingTop="8dp"
            android:text="Short of Breath "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView25"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="Cholestrol:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/psob"
            android:layout_toRightOf="@id/textView26"
            android:fontFamily="sans-serif"
            android:paddingLeft="64dp"
            android:paddingTop="8dp"
            android:text="Cholestrol"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/Vital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView26"
            android:background="?attr/dividerHorizontal"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Vital Signs"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView29"
            android:layout_below="@id/Vital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:text="Systolic:"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/psystolic"
            android:layout_below="@id/Vital"
            android:layout_toRightOf="@id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="76dp"
            android:text="Systolic"
            android:textSize="16sp"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/textView31"
            android:layout_below="@id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:text="Diastolic:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/pdiastolic"
            android:layout_below="@id/psystolic"
            android:layout_toRightOf="@id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="72dp"
            android:text="Diastolic"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
             />


        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_below="@id/textView31"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:text="Temperature:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/pTemperature"
            android:layout_below="@id/pdiastolic"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/textView50"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="43dp"
            android:text="Temperature"
            android:textSize="16sp"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView50"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="HeartRate:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pHeartbeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pTemperature"
            android:layout_toEndOf="@+id/textView21"
            android:fontFamily="sans-serif"
            android:paddingLeft="59dp"
            android:paddingTop="8dp"
            android:text="HeartRate"
            android:textSize="16sp" />

        <Button
            android:id="@+id/baudio1"
            android:layout_below="@id/pHeartbeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play Audio" />

        <Button
            android:id="@+id/Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/baudio1"
            android:text="Delete" />

        <Button
            android:id="@+id/genrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Delete"
            android:text="generate report" />

        <Button
            android:id="@+id/bShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/genrate"
            android:text="Share" />

        <Button
            android:id="@+id/Exit"
            android:layout_below="@id/bShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit" /><![CDATA[

        !/-->


    ]]>


    </RelativeLayout>

</ScrollView>







